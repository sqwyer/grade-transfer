<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/svg+xml" href="/static/favicon.svg"/>

    <link rel="stylesheet" href="/styles/base.css">
    <link rel="stylesheet" href="/styles/index.css">
    <link rel="stylesheet" href="/styles/courses.css">

    <title>Grade Transfer</title>
</head>
<body>
    <div class="box">
        <h1>Your courses.</h1>
        <p>{{description}}</p>
        <a class="button" href="#">
            Advance
        </a>
        {{#each list}}
            <div class="list-item" courseId="{{this.id}}">
                <p class="title">{{this.name}}</p>
                <p class="sub">{{this.roster.length}} student(s)</p>
            </div>
        {{/each}}
    </div>
    <div class="footer">
        <a href="/help" style="float: left">Help Center</a>
        <a href="mailto:570000826@nlrsd.org" style="float: right">Contact</a>
    </div>
    <script>
        let ids = [];
        let elems = document.getElementsByClassName("list-item");
        for(let i = 0; i < elems.length; i++) {
            let e = elems[i];
            e.addEventListener("click", () => {
                let id = e.getAttribute("courseId");
                if(e.classList.contains("selected")) {
                    let index = ids.indexOf(id);
                    if (index > -1) {
                        ids.splice(index, 1);
                    }
                    e.classList.remove("selected");
                } else {
                   e.classList.add("selected");
                   ids.push(id);
                }
            });
        }
    </script>
</body>
</html>